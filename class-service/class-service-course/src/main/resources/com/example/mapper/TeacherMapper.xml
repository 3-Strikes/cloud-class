<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.TeacherMapper">

    <select id="selectNamesByIds" resultType="java.lang.String">
        select name from t_teacher where id in
        <foreach item="id" collection="list" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>
    <select id="listByCourseId" resultType="com.example.domain.Teacher">
        select t.id,t.name,t.intro,t.technology,t.position,t.head_img,t.tags from t_teacher t
        left join t_course_teacher ct on t.id = ct.teacher_id
        where ct.course_id = #{courseId}
    </select>
    <!--    <select id="selectList" resultType="com.example.domain.CourseTeacher">-->
<!--         select Distinct* from t_course_teacher-->
<!--    </select>-->
</mapper>
